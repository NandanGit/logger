    "node-log",
    "console-logger"
  ],
  "author": "Nandan Reddy <nandan.reddy1133@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.15.11",
    "npmignore": "^0.3.0",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "publishConfig": {
    "ignore": [
      "src",
      "tests",
      "tsconfig.json",
      "rollup.config.js",
      "jest.config.js",
      "examples",
      ".prettierrc",
      ".vscode",
      "!dist"
    ]
  }
